. /etc/default/derper

name="derper"
description="Tailscale DERP server"
command="/usr/bin/derper"
command_args="-hostname ${HOSTNAME} -addr ${ADDR} ${FLAGS}"
command_user="derper:derper"
command_background=true
pidfile="/run/derper.pid"
directory="/var/lib/derper"
output_log="/var/log/derp/derp.log"
error_log="/var/log/derp/derp.error"

depend() {
	need net
}
